---
const currentPath = Astro.url.pathname;

// Generate breadcrumbs from path
const segments = currentPath.split(`/`).filter(Boolean);

interface Breadcrumb {
    label: string;
    href: string;
    current: boolean;
}

const breadcrumbs: Breadcrumb[] = segments.map((segment, index) => {
    const isLast = index === segments.length - 1;
    // Only link to parent folders, not the current page
    const href = isLast ? currentPath : `/` + segments.slice(0, index + 1).join(`/`) + `/`;
    const label = segment
        .split(`-`)
        .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
        .join(` `);
    return {
        label,
        href,
        current: isLast,
    };
});

// Add home
breadcrumbs.unshift({
    label:   `Home`,
    href:    `/`,
    current: false,
});
---

<nav aria-label="Breadcrumb" class="mb-4">
    <ol class="flex items-center gap-1.5 text-sm text-muted-foreground">
        {breadcrumbs.map((crumb, index) => (
            <li class="flex items-center gap-1.5">
                {index > 0 && (
                    <svg class="size-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m9 18 6-6-6-6" />
                    </svg>
                )}
                {crumb.current ? (
                    <span class="font-medium text-foreground" aria-current="page">
                        {crumb.label}
                    </span>
                ) : (
                    <a
                        href={crumb.href}
                        class="transition-colors hover:text-foreground"
                    >
                        {crumb.label}
                    </a>
                )}
            </li>
        ))}
    </ol>
</nav>
