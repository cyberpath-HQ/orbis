---
import path from "path"
import fs from "fs"
const currentPath = Astro.url.pathname;

// Generate breadcrumbs from path
const segments = currentPath.split(`/`).filter(Boolean);

interface Breadcrumb {
    label: string;
    href: string;
    current: boolean;
}

const breadcrumbs: Breadcrumb[] = segments.map((segment, index) => {
    const isLast = index === segments.length - 1;
    // Only link to parent folders, not the current page
    const href = isLast ? currentPath : `/` + segments.slice(0, index + 1).join(`/`) + `/`;
    const label = segment
        .split(`-`)
        .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
        .join(` `);
    
    // check if the segment exists by checking if the file (index.md(x) or overview.md(x) or intro.md(x)) exists in the docs folder
    const __dirname = import.meta.dirname
    const segment_formatted = segments.slice(1, index + 1).join(`/`);
    const filePathIndexMd = path.normalize(path.join(__dirname, `../docs`, segment_formatted, `index.md`));
    const filePathIndexMdx = path.normalize(path.join(__dirname, `../docs`, segment_formatted, `index.mdx`));
    const filePathOverviewMd = path.normalize(path.join(__dirname, `../docs`, segment_formatted, `overview.md`));
    const filePathOverviewMdx = path.normalize(path.join(__dirname, `../docs`, segment_formatted, `overview.mdx`));
    const filePathIntroMd = path.normalize(path.join(__dirname, `../docs`, segment_formatted, `intro.md`));
    const filePathIntroMdx = path.normalize(path.join(__dirname, `../docs`, segment_formatted, `intro.mdx`));
    
    try {
        if (!fs.existsSync(filePathIndexMd) && !fs.existsSync(filePathOverviewMd) &&
            !fs.existsSync(filePathIntroMd) && 
            !fs.existsSync(filePathIndexMdx) && !fs.existsSync(filePathOverviewMdx) && 
            !fs.existsSync(filePathIntroMdx)) {
            // If neither file exists, return a breadcrumb without href
            return {
                label,
                href: null,
                current: isLast,
            };
        }
    }
    catch (e) {
        // If the file doesn't exist, return a breadcrumb without href
        return {
            label,
            href: null,
            current: isLast,
        };
    }

    return {
        label,
        href,
        current: isLast,
    };
});

// Add home
breadcrumbs.unshift({
    label:   `Home`,
    href:    `/`,
    current: false,
});
---

<nav aria-label="Breadcrumb" class="mb-4">
    <ol class="flex items-center gap-1.5 text-sm text-muted-foreground">
        {breadcrumbs.map((crumb, index) => (
            <li class="flex items-center gap-1.5">
                {index > 0 && (
                    <svg class="size-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="m9 18 6-6-6-6" />
                    </svg>
                )}
                {
                    crumb.current 
                    ? (
                    <span class="font-medium text-foreground" aria-current="page">
                        {crumb.label}
                    </span>
                ) 
                : (
                    crumb.href 
                    ? (
                    <a
                        href={crumb.href}
                        class="transition-colors hover:text-foreground"
                    >
                        {crumb.label}
                    </a>
                )
                : (
                    <span class="transition-colors">
                        {crumb.label}
                    </span>
                )
                )}
            </li>
        ))}
    </ol>
</nav>
