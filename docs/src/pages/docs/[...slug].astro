---
import { getCollection, render } from 'astro:content';
import DocsLayout from '@/layouts/DocsLayout.astro';

export async function getStaticPaths() {
    const docsEntries = await getCollection(`docs`);
    let static_paths =  docsEntries.map((entry) => ({
        params: { slug: entry.id === `intro` ? undefined : entry.id },
        props:  { entry },
    }));

    // Add an additional path for the overview page aliasing it to the parent directory
    for (const path of static_paths) {
        if(path.props.entry.id.endsWith("overview")) {
            static_paths.push({
                params: { slug: path.props.entry.id.replace(/\/overview$/, '') || undefined },
                props:  { entry: path.props.entry },
            });
        }
    }

    return static_paths;
}

const { entry } = Astro.props;
const { Content, headings } = await render(entry);
---

<DocsLayout 
    title={entry.data.title} 
    description={entry.data.description}
    headings={headings}
>
    <Content />
</DocsLayout>
