/**
 * Orbis Documentation Theme
 * Based on shadcn/ui color palette
 * 
 * This theme provides a clean, modern look that matches
 * the Orbis application's design language.
 */

/* ============================================
   Light Mode - shadcn-inspired theme
   ============================================ */
:root {
  /* Primary colors - neutral dark (matches shadcn default) */
  --ifm-color-primary: #18181b;
  --ifm-color-primary-dark: #09090b;
  --ifm-color-primary-darker: #000000;
  --ifm-color-primary-darkest: #000000;
  --ifm-color-primary-light: #27272a;
  --ifm-color-primary-lighter: #3f3f46;
  --ifm-color-primary-lightest: #52525b;
  --ifm-color-primary-contrast-foreground: #fafafa;

  /* Background colors */
  --ifm-background-color: #ffffff;
  --ifm-background-surface-color: #fafafa;
  
  /* Text colors */
  --ifm-font-color-base: #09090b;
  --ifm-font-color-secondary: #71717a;
  
  /* Border */
  --ifm-toc-border-color: #e4e4e7;
  --ifm-hr-border-color: #e4e4e7;
  
  /* Code */
  --ifm-code-font-size: 0.95em;
  --docusaurus-highlighted-code-line-bg: rgba(0, 0, 0, 0.05);
  
  /* Cards & surfaces */
  --ifm-card-background-color: #ffffff;
  --ifm-card-border-radius: 0.75rem;
  
  /* Navbar */
  --ifm-navbar-background-color: #ffffff;
  --ifm-navbar-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.03);
  
  /* Footer */
  --ifm-footer-background-color: #18181b;
  --ifm-footer-color: #fafafa;
  --ifm-footer-link-color: #a1a1aa;
  --ifm-footer-link-hover-color: #ffffff;
  
  /* Sidebar */
  --ifm-menu-color: #52525b;
  --ifm-menu-color-active: #18181b;
  --ifm-menu-color-background-active: #f4f4f5;
  --ifm-menu-color-background-hover: #fafafa;
  
  /* Alert/Admonition colors */
  --ifm-color-info: #3b82f6;
  --ifm-color-success: #22c55e;
  --ifm-color-warning: #f59e0b;
  --ifm-color-danger: #ef4444;
  
  /* Border radius - rounded corners like shadcn */
  --ifm-global-radius: 0.5rem;
  --ifm-button-border-radius: 0.375rem;
  --ifm-code-border-radius: 0.375rem;
  
  /* Shadows */
  --ifm-global-shadow-lw: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --ifm-global-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --ifm-global-shadow-tl: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  
  /* Typography */
  --ifm-font-family-base: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  --ifm-font-family-monospace: 'JetBrains Mono', 'Fira Code', Consolas, Monaco, 'Andale Mono', monospace;
  --ifm-heading-font-weight: 600;
  --ifm-font-weight-semibold: 500;
}

/* ============================================
   Dark Mode - shadcn-inspired dark theme
   ============================================ */
[data-theme='dark'] {
  /* Primary colors - light for dark mode */
  --ifm-color-primary: #fafafa;
  --ifm-color-primary-dark: #f4f4f5;
  --ifm-color-primary-darker: #e4e4e7;
  --ifm-color-primary-darkest: #d4d4d8;
  --ifm-color-primary-light: #ffffff;
  --ifm-color-primary-lighter: #ffffff;
  --ifm-color-primary-lightest: #ffffff;
  --ifm-color-primary-contrast-foreground: #09090b;
  
  /* Background colors */
  --ifm-background-color: #09090b;
  --ifm-background-surface-color: #18181b;
  
  /* Text colors */
  --ifm-font-color-base: #fafafa;
  --ifm-font-color-secondary: #a1a1aa;
  
  /* Border */
  --ifm-toc-border-color: #27272a;
  --ifm-hr-border-color: #27272a;
  
  /* Code */
  --docusaurus-highlighted-code-line-bg: rgba(255, 255, 255, 0.1);
  
  /* Cards & surfaces */
  --ifm-card-background-color: #18181b;
  
  /* Navbar */
  --ifm-navbar-background-color: #09090b;
  --ifm-navbar-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
  
  /* Footer */
  --ifm-footer-background-color: #09090b;
  --ifm-footer-color: #fafafa;
  --ifm-footer-link-color: #71717a;
  --ifm-footer-link-hover-color: #fafafa;
  
  /* Sidebar */
  --ifm-menu-color: #a1a1aa;
  --ifm-menu-color-active: #fafafa;
  --ifm-menu-color-background-active: #27272a;
  --ifm-menu-color-background-hover: #18181b;
  
  /* Shadows */
  --ifm-global-shadow-lw: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
  --ifm-global-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
  --ifm-global-shadow-tl: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
}

/* ============================================
   Component Overrides
   ============================================ */

/* Navbar styling */
.navbar {
  border-bottom: 1px solid var(--ifm-toc-border-color);
}

.navbar__title {
  font-weight: 700;
  letter-spacing: -0.02em;
}

/* Sidebar improvements */
.menu__link {
  border-radius: var(--ifm-global-radius);
  transition: all 0.15s ease;
}

.menu__link--active {
  font-weight: 500;
}

/* Table of contents */
.table-of-contents__link {
  border-radius: 0.25rem;
  padding: 0.25rem 0.5rem;
  margin-left: -0.5rem;
}

.table-of-contents__link:hover,
.table-of-contents__link--active {
  background-color: var(--ifm-menu-color-background-hover);
  font-weight: 600;
}

/* Pagination buttons */
.pagination-nav__link {
  border-radius: var(--ifm-global-radius);
  border-color: var(--ifm-toc-border-color);
  transition: all 0.15s ease;
}

.pagination-nav__link:hover {
  border-color: var(--ifm-color-primary);
  box-shadow: var(--ifm-global-shadow-md);
}

/* Code blocks */
.prism-code {
  border-radius: var(--ifm-global-radius);
  border: 1px solid var(--ifm-toc-border-color);
}

/* Inline code */
code {
  background-color: var(--ifm-background-surface-color);
  border: 1px solid var(--ifm-toc-border-color);
  padding: 0.5rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.875em;
}

/* Admonitions */
.admonition {
  border-radius: var(--ifm-global-radius);
  border-width: 1px;
  border-left-width: 4px;
}

/* Cards */
.card {
  border-radius: var(--ifm-card-border-radius);
  border: 1px solid var(--ifm-toc-border-color);
  box-shadow: var(--ifm-global-shadow-lw);
  transition: all 0.2s ease;
}

.card:hover {
  box-shadow: var(--ifm-global-shadow-md);
  border-color: var(--ifm-color-primary-light);
}

/* Buttons */
.button {
  border-radius: var(--ifm-button-border-radius);
  font-weight: 500;
  transition: all 0.15s ease;
}

.button--primary {
  background-color: var(--ifm-color-primary);
  color: var(--ifm-color-primary-contrast-foreground);
}

.button--primary:hover {
  background-color: var(--ifm-color-primary-dark);
  color: var(--ifm-color-primary-contrast-foreground);
}

.button--secondary {
  background-color: transparent;
  color: var(--ifm-color-primary);
  border: 1px solid var(--ifm-toc-border-color);
}

.button--secondary:hover {
  background-color: var(--ifm-background-surface-color);
  border-color: var(--ifm-color-primary);
}

/* Search */
.DocSearch-Button {
  border-radius: var(--ifm-global-radius) !important;
  border: 1px solid var(--ifm-toc-border-color) !important;
}

/* Footer */
.footer {
  border-top: 1px solid #27272a;
}

.footer__title {
  font-weight: 600;
  letter-spacing: -0.01em;
}

/* Tables */
table {
  border-radius: var(--ifm-global-radius);
  overflow: hidden;
  width: 100%;
}

table thead, table tbody {
  width: 100%;
}

table :is(thead, tbody) tr {
  width: 100%;
}

table th {
  background-color: var(--ifm-background-surface-color);
  font-weight: 600;
}

table td,
table th {
  border-color: var(--ifm-toc-border-color);
}

/* Tabs */
.tabs__item {
  border-radius: var(--ifm-global-radius) var(--ifm-global-radius) 0 0;
  font-weight: 500;
}

.tabs__item--active {
  border-bottom-color: var(--ifm-color-primary);
}

/* ============================================
   Homepage Specific Styles
   ============================================ */
.hero {
  padding: 4rem 0;
}

.hero__title {
  font-size: 3rem;
  font-weight: 700;
  letter-spacing: -0.03em;
  line-height: 1.1;
}

.hero__subtitle {
  font-size: 1.25rem;
  color: var(--ifm-font-color-secondary);
  max-width: 600px;
  margin: 1.5rem auto;
}

/* Feature cards on homepage */
.feature-card {
  padding: 2rem;
  border-radius: var(--ifm-card-border-radius);
  background: var(--ifm-card-background-color);
  border: 1px solid var(--ifm-toc-border-color);
  transition: all 0.2s ease;
}

.feature-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--ifm-global-shadow-md);
}

.feature-card__icon {
  width: 48px;
  height: 48px;
  margin-bottom: 1rem;
  color: var(--ifm-color-primary);
}

.feature-card__title {
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.feature-card__description {
  color: var(--ifm-font-color-secondary);
  line-height: 1.6;
}

/* ============================================
   Utilities
   ============================================ */
.text-gradient {
  background: linear-gradient(135deg, var(--ifm-color-primary) 0%, #6366f1 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Announcement bar */
[class*='announcementBar'] {
  font-weight: 500;
}

/* Version badge */
.badge {
  border-radius: 9999px;
  padding: 0.125rem 0.5rem;
  font-size: 0.75rem;
  font-weight: 500;
}

/* Mermaid diagrams */
.mermaid {
  background: var(--ifm-background-surface-color);
  padding: 1rem;
  border-radius: var(--ifm-global-radius);
  border: 1px solid var(--ifm-toc-border-color);
}

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}

/* Focus styles for accessibility */
:focus-visible {
  outline: 2px solid var(--ifm-color-primary);
  outline-offset: 2px;
}

/* Selection color */
::selection {
  background-color: rgba(24, 24, 27, 0.2);
}

[data-theme='dark'] ::selection {
  background-color: rgba(250, 250, 250, 0.2);
}
