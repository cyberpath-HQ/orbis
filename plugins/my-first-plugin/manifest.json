{
  "name": "my-first-plugin",
  "version": "1.0.0",
  "description": "My First Orbis Plugin",
  "author": "Plugin Developer",
  "homepage": "https://example.com",
  "license": "MIT",
  "min_orbis_version": "0.1.0",
  "dependencies": [],
  "permissions": [
    "database_read",
    "network"
  ],
  "routes": [
    {
      "method": "GET",
      "path": "/api/data",
      "handler": "get_data",
      "description": "Fetch data from the plugin",
      "requires_auth": true,
      "permissions": [],
      "rate_limit": 60
    }
  ],
  "pages": [
    {
      "route": "/dashboard",
      "title": "Dashboard",
      "icon": "LayoutDashboard",
      "description": "Plugin dashboard with data visualization",
      "show_in_menu": true,
      "menu_order": 0,
      "parent_route": null,
      "requires_auth": true,
      "permissions": [],
      "roles": [],
      "state": {
        "data": {
          "type": "array",
          "default": [],
          "nullable": false,
          "description": "Data from API"
        },
        "loading": {
          "type": "boolean",
          "default": false,
          "nullable": false,
          "description": "Loading state"
        }
      },
      "computed": {},
      "sections": [
        {
          "type": "Container",
          "id": "main",
          "className": "p-6",
          "style": null,
          "visible": null,
          "children": [
            {
              "type": "Text",
              "id": null,
              "className": "text-2xl font-bold mb-4",
              "style": null,
              "visible": null,
              "children": [],
              "events": null,
              "text": "Dashboard"
            },
            {
              "type": "Text",
              "id": null,
              "className": null,
              "style": null,
              "visible": "${state.loading}",
              "children": [],
              "events": null,
              "text": "Loading..."
            },
            {
              "type": "Table",
              "id": "dataTable",
              "className": null,
              "style": null,
              "visible": "${!state.loading}",
              "children": [],
              "events": null,
              "dataSource": "state:data",
              "columns": [
                {
                  "key": "id",
                  "label": "ID",
                  "sortable": true
                },
                {
                  "key": "name",
                  "label": "Name",
                  "sortable": true
                },
                {
                  "key": "value",
                  "label": "Value",
                  "sortable": false
                }
              ]
            }
          ],
          "events": null
        }
      ],
      "actions": {},
      "hooks": {
        "on_mount": [
          {
            "type": "call_api",
            "name": "fetchData",
            "api": "/api/plugins/example-plugin/api/data",
            "method": "GET",
            "args_from_state": [],
            "map_args": [],
            "body": null,
            "on_success": [
              {
                "type": "update_state",
                "path": "data",
                "value": null,
                "from": "response.data",
                "merge": false
              }
            ],
            "on_error": [
              {
                "type": "show_toast",
                "level": "error",
                "message": "Failed to load data",
                "title": "Error",
                "duration": 5000
              }
            ],
            "on_finally": [
              {
                "type": "update_state",
                "path": "loading",
                "value": false,
                "from": null,
                "merge": false
              }
            ]
          }
        ],
        "on_unmount": [],
        "on_params_change": [],
        "on_query_change": []
      },
      "dialogs": []
    }
  ],
  "wasm_entry": "plugin.wasm",
  "config": {}
}